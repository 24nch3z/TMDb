<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/poster_view"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/year_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/item_movie_date_background"
        android:fontFamily="@font/googlesans_regular"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textColor="#fff"
        android:textSize="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="2019" />

    <TextView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_movie_poster_margin"
        android:fontFamily="@font/googlesans_medium"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/poster_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Star Wars, Star Wars, Star Wars, Star Wars, Star Wars, Star Wars, Star Wars, Star Wars, Star Wars" />

    <TextView
        android:id="@+id/description_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_movie_poster_margin"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/googlesans_regular"
        android:lines="4"
        android:maxLines="4"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/poster_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        tools:text="Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма, Описание фильма" />

    <TextView
        android:id="@+id/rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_movie_poster_margin"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/poster_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/poster_view"
        tools:ignore="SpUsage"
        tools:text="Рейтинг: 7.543 (25 954)" />


</androidx.constraintlayout.widget.ConstraintLayout>